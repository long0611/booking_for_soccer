<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardLichSu"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:background="@drawable/borderbottom"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:drawableLeft="@drawable/delete"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:id="@+id/tvTitleSan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/averta_light"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="7dp"
                    android:text="Tên sân:"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvTitleTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/averta_light"
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    android:text="Thời gian vào:"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvTitleSan" />

                <TextView
                    android:id="@+id/tvTitleThoiLuong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/averta_light"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="Thời lượng:"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvTitleTime" />

                <TextView
                    android:id="@+id/tvTitleSdt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="7dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/averta_light"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="Số điện thoại:"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvTitleThoiLuong" />

                <TextView
                    android:id="@+id/tvTenSan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Tên sân"
                    android:fontFamily="@font/averta_regular"
                    android:textSize="20sp"
                    android:textColor="@color/my_color"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tvTitleSan"
                    app:layout_constraintTop_toTopOf="@+id/tvTitleSan" />

                <TextView
                    android:id="@+id/tvTimeIn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Thời gian vào"
                    android:fontFamily="@font/averta_regular"
                    android:textSize="19sp"
                    android:textColor="@color/my_color"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tvTitleTime"
                    app:layout_constraintTop_toTopOf="@+id/tvTitleTime" />

                <TextView
                    android:id="@+id/tvSoPhut"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Thời lượng"
                    android:textSize="20sp"
                    android:fontFamily="@font/averta_regular"
                    android:textColor="@color/my_color"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tvTitleThoiLuong"
                    app:layout_constraintTop_toTopOf="@+id/tvTitleThoiLuong" />

                <TextView
                    android:id="@+id/tvSdt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Số điện thoại"
                    android:textSize="20sp"
                    android:fontFamily="@font/averta_regular"
                    android:textColor="@color/my_color"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tvTitleSdt"
                    app:layout_constraintTop_toTopOf="@+id/tvTitleSdt" />
            </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>