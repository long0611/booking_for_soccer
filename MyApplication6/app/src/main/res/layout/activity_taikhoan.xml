<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.TaiKhoan">
    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="centerCrop"
            android:src="@drawable/ic_w3"
            android:layout_width="match_parent"
            android:layout_height="180dp"/>

        <TextView
            android:id="@+id/tvTitle"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-160dp"
            android:fontFamily="@font/averta_regular"
            android:text="Tài khoản"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="bold"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="-70dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:paddingTop="5dp"
        android:paddingBottom="3dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/averta_regular"
            android:textColor="@color/black"
            android:text="Họ tên"
            android:textSize="20sp"
            android:layout_marginBottom="7dp"
            />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/averta_regular"
            android:text="Họ tên"
            android:textColor="@color/my_color"
            android:textSize="16sp"
            />
        <TextView
            android:layout_marginTop="2dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/bordercustom"
            android:layout_width="match_parent"
            android:layout_height="5dp"/>

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/averta_regular"
            android:text="UserName"
            android:textColor="@color/black"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="match_parent"
            android:textColor="@color/my_color"
            android:layout_height="wrap_content"
            android:text="Email"
            android:fontFamily="@font/averta_regular"
            android:textSize="16sp"
             />
        <TextView
            android:layout_marginTop="2dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/bordercustom"
            android:layout_width="match_parent"
            android:layout_height="5dp"/>

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/gioitinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giới tính"
            android:fontFamily="@font/averta_regular"
            android:textColor="@color/black"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/tvGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giới tính"
            android:fontFamily="@font/averta_regular"
            android:textSize="16sp"
            android:textColor="@color/my_color"
            />
        <TextView
            android:layout_marginTop="2dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/bordercustom"
            android:layout_width="match_parent"
            android:layout_height="5dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sdt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/averta_regular"
            android:text="Số điện thoại"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvPhoneNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/averta_regular"
            android:text="Số điện thoại"
            android:textColor="@color/my_color"
            android:textSize="16sp" />

        <TextView
            android:layout_marginTop="2dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/bordercustom"
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Địa chỉ"
            android:fontFamily="@font/averta_regular"
            android:textSize="20sp"
        />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Địa chỉ"
            android:textSize="16sp"
            android:textColor="@color/my_color"
            android:fontFamily="@font/averta_regular"
         />
        <TextView
            android:layout_marginTop="2dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/bordercustom"
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
    </LinearLayout>

     <TextView
         android:layout_marginEnd="20dp"
         android:layout_marginStart="20dp"
         android:layout_marginTop="5dp"
         android:gravity="center_vertical"
         android:layout_width="match_parent"
         android:background="@drawable/bordertopcus"
         android:layout_height="5dp"/>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:layout_height="wrap_content">

        <TextView
            android:text="Đổi mật khẩu"
            android:textSize="22sp"
            android:textColor="@color/my_color"
            android:layout_width="wrap_content"
            android:fontFamily="@font/averta_regular"
            android:layout_height="match_parent"/>
        <EditText
            android:id="@+id/edtPassCu"
            android:drawableLeft="@drawable/password"
            android:hint="Mật khẩu cũ"
            android:textSize="18sp"
            android:fontFamily="@font/averta_regular"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edtPassNew"
            android:hint="Mật khẩu mới"
            android:textSize="18sp"
            android:fontFamily="@font/averta_regular"
            android:drawableLeft="@drawable/passsercu"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/btnRePass"
            android:background="@drawable/cusbutton"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:text="Đổi mật khẩu"
            android:fontFamily="@font/averta_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:background="@drawable/bordertopcus"
        android:layout_height="5dp"/>

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/btnLogout"
        android:layout_gravity="center"
        android:padding="5dp"
        android:text="Đăng Xuất"
        android:textAllCaps="false"
        android:background="@drawable/cuslogout"
        android:fontFamily="@font/averta_regular"
        android:textSize="18sp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/backTK"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-645dp"
        android:drawableLeft="@drawable/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>